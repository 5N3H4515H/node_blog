<%- include("partials/header") %>
    <div class="container my-5">
        <% if (blogs.length>0) { %>
            <div class="row g3">
                <% blogs.forEach(blog=> { %>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= blog.name %>
                                </h5>
                                <div class="mt-3">
                                    <a class="btn btn-primary" href="/blog/<%=blog.id%>" class="card-link">Read more</a>
                                    <a class="btn btn-success" href="/edit/<%=blog.id%>" class="card-link">Edit Blog</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <% }else{ %>
                <h3>No blogs yet!!!</h3>
                <% } %>

    </div>