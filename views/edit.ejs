<div class="container my-5">
    <form action="/update/<%= Data.id %> " method="POST">
        <div class="form-group">
            <input type="text" name="blog_title" class="form-control" value="<%= Data.name %>">
        </div>
        <div class="form-group">
            <textarea class="form-control" name="blog_body" rows="3"><%= Data.body %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>